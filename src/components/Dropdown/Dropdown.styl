.dropdown
  position relative
  min-width 190px
  width 100%

  &__btn
    width 100%
    padding 10px
    border 1px solid #eee
    border-radius 3px
    background-color #444
    outline none
    font-size 18px
    line-height 1.2
    text-align left
    color #fff

  &__option-list
    position absolute
    top 100%
    left 0
    right 0
    z-index 1
    margin-top -10px
    visibility hidden
    background-color #555
    opacity 0
    transition margin-top 0.3s, opacity 0.3s

    &.is-open
      margin-top 0
      opacity 1
      visibility visible

  &__option
    position relative
    display block
    padding 10px
    font-size 18px
    line-height 1
    cursor pointer
    transition background-color 0.3s

    &:hover
      background-color #444

  &__radio
    position absolute
    opacity 0
